{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": true,
    "sourceMap": true
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}